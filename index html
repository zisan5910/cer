<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>বগুড়া ব্লাড ডোনেশন সার্টিফিকেট জেনারেটর</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf-lib/1.17.1/pdf-lib.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            color: #e74c3c;
            text-align: center;
        }
        input[type="text"] {
            width: 100%;
            padding: 12px;
            margin: 15px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 12px 20px;
            width: 100%;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #c0392b;
        }
        button:disabled {
            background-color: #95a5a6;
            cursor: not-allowed;
        }
        .preview {
            margin-top: 20px;
            text-align: center;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ব্লাড ডোনেশন সার্টিফিকেট জেনারেটর</h1>
        <input type="text" id="userName" placeholder="আপনার পুরো নাম লিখুন">
        <button id="generateBtn" onclick="generateCertificate()">সার্টিফিকেট ডাউনলোড করুন</button>
        <div class="preview" id="preview">
            <p>আপনার সার্টিফিকেট তৈরি হচ্ছে...</p>
        </div>
    </div>

    <script>
        async function generateCertificate() {
            const userName = document.getElementById('userName').value.trim();
            const button = document.getElementById('generateBtn');
            const preview = document.getElementById('preview');
            
            if (!userName) {
                alert('দয়া করে আপনার নাম লিখুন');
                return;
            }
            
            button.disabled = true;
            button.textContent = 'তৈরি হচ্ছে...';
            preview.style.display = 'block';
            
            try {
                // টেমপ্লেট PDF লোড করুন (আপনার PDF URL দিতে হবে)
                const pdfBytes = await fetch('certificate.pdf').then(res => res.arrayBuffer());
                const { PDFDocument, rgb } = PDFLib;
                const pdfDoc = await PDFDocument.load(pdfBytes);
                const page = pdfDoc.getPages()[0];
                const { width, height } = page.getSize();
                
                // নামের জন্য সঠিক পজিশন (আপনার PDF অনুযায়ী এডজাস্ট করুন)
                const textWidth = userName.length * 12; // আনুমানিক টেক্সট প্রস্থ
                const xPos = width / 2 - (textWidth / 2);
                const yPos = height / 2 + 120; // উল্লম্ব পজিশন
                
                // PDF এ নাম যোগ করুন
                page.drawText(userName.toUpperCase(), {
                    x: xPos,
                    y: yPos,
                    size: 28,
                    color: rgb(0, 0, 0),
                });
                
                // PDF জেনারেট ও ডাউনলোড
                const newPdfBytes = await pdfDoc.save();
                const blob = new Blob([newPdfBytes], { type: 'application/pdf' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = `${userName}_Blood_Donation_Certificate.pdf`;
                link.click();
                
            } catch (error) {
                console.error('ত্রুটি:', error);
                alert('সার্টিফিকেট তৈরি করতে সমস্যা হয়েছে। পুনরায় চেষ্টা করুন।');
            } finally {
                button.disabled = false;
                button.textContent = 'সার্টিফিকেট ডাউনলোড করুন';
                preview.style.display = 'none';
            }
        }
    </script>
</body>
</html>
